<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.alanaandnazar.qrscanner.activity.MainActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical"
        android:padding="5dp">


        <ImageView
            android:id="@+id/GuestImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:clickable="false"
            android:elevation="3dp"
            android:src="@drawable/add_icon"
            android:visibility="visible" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/my_custom_edittext"
            android:elevation="6dp"
            android:gravity="center">

            <EditText
                android:id="@+id/ID"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@null"
                android:drawableLeft="@drawable/edit_login"
                android:fontFamily="sans-serif"
                android:hint="Введите ID"
                android:inputType="number"
                android:lines="1"
                android:maxLength="9"
                android:textSize="14dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/fio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="12dp" />

        <Spinner
            android:id="@+id/typeSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/my_custom_edittext"
            android:elevation="4dp"
            android:fontFamily="sans-serif"
            android:popupBackground="@android:color/transparent">


        </Spinner>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtEnter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Вход"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Switch

                android:id="@+id/enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:shadowColor="@color/colorPrimaryDark"
                android:thumbTint="@color/colorPrimaryDark"
                android:trackTint="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/txtExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Выход"
                android:textColor="#8b8b8b"
                android:textSize="14sp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Показать информацию" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:orientation="vertical"
            android:padding="5dp">

            <Button
                android:id="@+id/scanner"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@drawable/mybutton"
                android:elevation="2dp"
                android:fontFamily="sans-serif"
                android:text="Сканировать"
                android:textAllCaps="false"
                android:textColor="#7a1a8b" />

            <Button
                android:id="@+id/sendData"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:background="@drawable/mybutton"
                android:elevation="2dp"
                android:fontFamily="sans-serif"
                android:text="Отправить"
                android:textAllCaps="false"
                android:textColor="#7a1a8b" />

            <Button
                android:id="@+id/exit"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/mybutton"
                android:elevation="2dp"
                android:fontFamily="sans-serif"
                android:text="Выйти"
                android:textAllCaps="false"
                android:textColor="#7a1a8b" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>
